<?xml version="1.0"?>
<Container version="2">
  <Name>PlexAniBridge</Name>
  <Repository>ghcr.io/eliasbenb/plexanibridge:latest</Repository>
  <Registry>https://github.com/eliasbenb/PlexAniBridge/pkgs/container/plexanibridge</Registry>
  <Network>bridge</Network>
  <Shell>sh</Shell>
  <Privileged>false</Privileged>
  <Support>https://github.com/eliasbenb/PlexAniBridge/issues</Support>
  <Project>https://github.com/eliasbenb/PlexAniBridge</Project>
  <Overview>PlexAniBridge is a tool designed to keep your AniList profile automatically synced with your Plex activity. Whether you're tracking your watch progress, ratings, or reviews, PlexAniBridge has you covered.</Overview>
  <Category>Productivity: MediaApp:Video MediaServer:Video</Category>
  <WebUI>http://[IP]:[PORT:4848]</WebUI>
  <TemplateURL/>
  <Icon>https://raw.githubusercontent.com/xshatterx/Seraphys/119181881e9f47b4e22102b771876132550b4aaa/PlexAniBridge.png</Icon>
  <ExtraParams/>
  <PostArgs/>
  <Config Name="AniList Token" Target="PAB_ANILIST_TOKEN" Default="" Mode="" Description="" Type="Variable" Display="always-hide" Required="true" Mask="true"/>
  <Config Name="Plex Token" Target="PAB_PLEX_TOKEN" Default="" Mode="" Description="" Type="Variable" Display="always-hide" Required="true" Mask="true"/>
  <Config Name="Plex Username" Target="PAB_PLEX_USER" Default="" Mode="" Description="" Type="Variable" Display="always-hide" Required="true" Mask="false"/>
  <Config Name="Plex URL" Target="PAB_PLEX_URL" Default="" Mode="" Description="" Type="Variable" Display="always-hide" Required="true" Mask="false"/>
  <Config Name="Plex Library" Target="PAB_PLEX_SECTIONS" Default="" Mode="" Description="" Type="Variable" Display="always-hide" Required="true" Mask="false">[]</Config>
  <Config Name="Plex Genres" Target="PAB_PLEX_GENRES" Default="" Mode="" Description="" Type="Variable" Display="always-hide" Required="true" Mask="false">[]</Config>
  <Config Name="Plex Metadata Source" Target="PAB_PLEX_METADATA_SOURCE" Default="" Mode="" Description="" Type="Variable" Display="always-hide" Required="true" Mask="false">Local</Config>
  <Config Name="Sync Interval" Target="PAB_SYNC_INTERVAL" Default="3600" Mode="" Description="Seconds" Type="Variable" Display="always-hide" Required="true" Mask="false">3600</Config>
  <Config Name="Sync Modes" Target="PAB_SYNC_MODES" Default="" Mode="" Description="" Type="Variable" Display="always-hide" Required="true" Mask="false">["Periodic"]</Config>
  <Config Name="Full Scan" Target="PAB_FULL_SCAN" Default="False|True" Mode="" Description="" Type="Variable" Display="always-hide" Required="true" Mask="false">False</Config>
  <Config Name="Destructive Sync" Target="PAB_DESTRUCTIVE_SYNC" Default="False|True" Mode="" Description="" Type="Variable" Display="always-hide" Required="true" Mask="false">False</Config>
  <Config Name="Excluded Sync Fields" Target="PAB_EXCLUDED_SYNC_FIELDS" Default="" Mode="" Description="" Type="Variable" Display="always-hide" Required="true" Mask="false">["notes", "score"]</Config>
  <Config Name="Config" Target="/config" Default="" Mode="rw" Description="" Type="Path" Display="advanced-hide" Required="true" Mask="false"/>
  <Config Name="Log Level" Target="PAB_LOG_LEVEL" Default="INFO|DEBUG|SUCCESS|WARNING|ERROR|CRITICAL" Mode="" Description="" Type="Variable" Display="advanced-hide" Required="true" Mask="false">INFO</Config>
  <Config Name="Dry Run" Target="PAB_DRY_RUN" Default="False|True" Mode="" Description="" Type="Variable" Display="advanced-hide" Required="true" Mask="false">False</Config>
  <Config Name="Batch Requests" Target="PAB_BATCH_REQUESTS" Default="False|True" Mode="" Description="" Type="Variable" Display="advanced-hide" Required="true" Mask="false">False</Config>
  <Config Name="Search Fallback Threshold" Target="PAB_SEARCH_FALLBACK_THRESHOLD" Default="-1" Mode="" Description="" Type="Variable" Display="advanced-hide" Required="true" Mask="false">-1</Config>
  <Config Name="WEBUI Port" Target="" Default="" Mode="tcp" Description="" Type="Port" Display="advanced" Required="true" Mask="false">4848</Config>
  <Config Name="PUID" Target="PUID" Default="99" Mode="" Description="" Type="Variable" Display="advanced" Required="true" Mask="false">99</Config>
  <Config Name="PGID" Target="PGID" Default="100" Mode="" Description="" Type="Variable" Display="advanced" Required="true" Mask="false">100</Config>
  <Config Name="UMASK" Target="UMASK" Default="002" Mode="" Description="" Type="Variable" Display="advanced" Required="true" Mask="false">002</Config>
</Container>






